<odoo>
    <record id="view_payment_provider_form_bkash" model="ir.ui.view">
        <field name="name">payment.provider.form.bkash</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='credentials']" position="inside">
                <group invisible="not code == 'bkash' or state == 'disabled'">
                    <field name="bkash_app_key"/>
                    <field name="bkash_app_secret" password="True"/>
                    <field name="bkash_username"/>
                    <field name="bkash_password" password="True"/>
                    <field name="bkash_base_url"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

